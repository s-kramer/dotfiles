  # AVALON ACCESS {{{
    export AVALON_MAVEN_BUILD_OPTIONS=" -Peg-snapshots -Puse-released-common-ui"

    alias memcacheFlush="echo 'flush_all' | nc localhost 11211"
    alias avalonInstallUi="cd ~/avalon/module && mvn -pl ui -amd -DskipTests -Puse-released-common-ui -Pdeploy-to-server"
    alias avalonOnlyCleanInstall="cd ~/avalon/module && mvn clean install -DskipTests  -Pdeploy-to-server $AVALON_MAVEN_BUILD_OPTIONS && echo 'Avalon recompilation'"
    alias avalonCleanInstallTomcatRestartServer="cd ~/avalon/module && mvn clean install -pl server -amd -DskipTests  -Pdeploy-to-server $AVALON_MAVEN_BUILD_OPTIONS && avalonRestartTomcat && cd - && sleep 15 && avalonCheckAvailability && echo 'Avalon recompilation and Tomcat restart done'"
    alias avalonCleanInstallTomcatRestart="cd ~/avalon/module && mvn clean install -DskipTests -Pdeploy-to-server $AVALON_MAVEN_BUILD_OPTIONS && avalonRestartTomcat && cd - && sleep 15 && avalonCheckAvailability && echo 'Avalon recompilation and Tomcat restart done'"
    alias avalonInstall="cd ~/avalon/module && mvn install -DskipTests -Pdeploy-to-server $AVALON_MAVEN_BUILD_OPTIONS "
    alias avalonInstallTomcatRestart="avalonInstall && avalonRestartTomcat && cd - && sleep 15 && avalonCheckAvailability && echo 'Avalon recompilation and Tomcat restart done'"
    alias avalonRebuildSchemas="cd ~/avalon/module && mvn -P rebuild-schemas -DskipTests $AVALON_MAVEN_BUILD_OPTIONS && cd -"
    alias avalonRunAllFuncTests="cd ~/avalon/module/ && mvn test -P'!unit-test' -Dmaven.test.failure.ignore=true $AVALON_MAVEN_BUILD_OPTIONS | tee func_test_results && cd -"
    alias avalonRunAllUnitTests="cd ~/avalon/module/ && mvn test -P'!func-test' -Dmaven.test.failure.ignore=true $AVALON_MAVEN_BUILD_OPTIONS | tee unit_test_results && cd -"
    alias avalonRunAllTests="cd ~/avalon/module/ && mvn test -Dmaven.test.failure.ignore=true $AVALON_MAVEN_BUILD_OPTIONS | tee test_results && cd -"
    alias avalonCheckAvailability="curl --connect-timeout 600 --max-time 600 -kI https://subdomain0.ezegnyte.com/ > /dev/null"
    alias avalonCheckAvailabilityVerbose="curl --connect-timeout 600 --max-time 600 -kIv https://subdomain0.ezegnyte.com/ > /dev/null"
    alias avalonRestartEzServer="~/avalon/scripts/ez_server.py restart && avalonCheckAvailability"
    alias avalonCreateSshTunnelToQaDebug="ssh qa-us -L 9998:app01:8000 -L 9999:app02:8000"
    alias avalonCreateSshTunnelToQaTomcat="ssh qa-us -L 9998:app01:6280 -L 9999:app02:6280"
    alias avalonRestartTomcat="cd ~/apache-tomcat-7.0.50/bin && ./catalina-jrebel.sh stop -force && ./catalina-jrebel.sh jpda start && sleep 15 && avalonCheckAvailability"
